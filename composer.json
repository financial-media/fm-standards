{
  "name": "treehouselabs/standards",
  "description": "Development standards by and for TreeHouse employees",
  "license": "MIT",
  "authors": [
    {
      "name": "Peter Kruithof",
      "email": "peter@treehouse.nl"
    },
    {
      "name": "Jeroen Fiege",
      "email": "jeroen@treehouse.nl"
    }
