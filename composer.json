  "config": {
    "bin-dir": "bin",
    "sort-packages": true
  },
  "require": {
    "php": ">=7.1",
    "friendsofphp/php-cs-fixer": "^2.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.4"
  },
  "autoload": {
    "psr-4": {
      "TreeHouse\\": "src/TreeHouse/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests/"
    }
  }
}
